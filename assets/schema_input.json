{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "",
    "title": "nf-locate - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "errorMessage": "Sample ID must be provided and cannot contain spaces",
                "meta": ["id"],
                "anyOf": [
                    {
                        "type": "string",
                        "pattern": "^\\S+$"
                    },
                    {
                        "type": "integer"
                    }
                ]
            },
            "bam": {
                "errorMessage": "Tumor BAM or CRAM file cannot contain spaces and must have extension '.bam' or '.cram'",
                "type": "string",
                "pattern": "^\\S+\\.(bam|cram)$",
                "format": "file-path",
                "exists": true
            },
            "pbi": {
                "errorMessage": "Tumor BAI or CRAI index file cannot contain spaces and must have extension '.bai', '.crai' or '.pbi'",
                "anyOf": [
                    {
                        "type": "string",
                        "pattern": "^\\S+\\.(bai|crai|pbi)$"
                    },
                    {
                        "type": "string",
                        "maxLength": 0
                    }
                ],
                "format": "file-path",
                "exists": true
            }
        },
        "required": ["sample", "bam"]
    }
}
